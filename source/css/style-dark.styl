#particles {
    visibility: hidden;
    opacity: 0;
    transition: visibility 0s, opacity 0s;
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: -10;
    top: 0;
    left: 0
}

#particles canvas{
  display: none;
}

@media print
  #particles canvas{
    display: none !important;
  }

@media (min-width: 480px)
  #particles {
    visibility: visible;
    opacity: 1;
    transition: visibility 0s, opacity 2s ease-in-out 1s;
  }

  #particles canvas{
    display: block;
  }
