.card-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.card-container .project-card {
  width: 300px;
  height: 200px;
  margin-bottom: 20px;
  position: relative;
  background-color: rgba(255,255,255,.05);
  backdrop-filter: blur(5px);
}

.card-container .project-card .card-wrap {
  box-sizing: border-box;
  height: 100%;
  display: block;
  padding: 0 20px 0 20px;
  border: 1px solid $color-accent-2;
  border-radius: 4px;
  color: $color-text;
  transition: border-color 0.1s ease-in-out, box-shadow 0.1s ease-in-out;
}

.project-list .project-item .meta {
  display: block;
  margin-right: 16px;
  min-width: 110px;
  color: #908d8d;
  font-size: 14px;
  text-align: right
}

@media (min-width: 480px)
  .project-list .project-item {
    display: flex;
  }

